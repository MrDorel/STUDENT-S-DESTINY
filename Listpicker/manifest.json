{
  "name": "List picker",
  "version": "1.1",
  "description": "Takes an input list and randomly selects one item.",
  "permissions": ["declarativeContent", "storage"],
  "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
  "page_action": {
	"default_popup": "popup.html",
	"default_icon": {
        "16": "icon1.png",
        "32": "icon1.png",
        "48": "icon1.png",
        "128": "icon1.png"
    }
  },
  "icons": {
      "16": "icon1.png",
      "32": "icon1.png",
      "48": "icon1.png",
      "128": "icon1.png"
  },
  "manifest_version": 2
}
